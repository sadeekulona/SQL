--display database; order by price
SELECT * FROM cafe_menu
ORDER BY price DESC;

--average price of drinks on menu
SELECT AVG(price)
FROM cafe_menu
WHERE category = 'drink';

--what are the five most expensive items on the menu? 
SELECT menu_item, price, category
FROM cafe_menu
ORDER BY price desc
limit 5; 
